<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBrown">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Enter Your Details  "
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="22dp"
            android:id="@+id/txt1"
            />
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Full Name"
        android:layout_below="@+id/cv1"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edt1"
        android:background="@drawable/edit_text"
        android:singleLine="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Semester  :-"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/edt1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/txt2"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:id="@+id/cdv2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        >
        <RadioGroup
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rg1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odd Semester"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Even Semester"/>
        </RadioGroup>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Branch : "
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/cdv2"
        android:layout_marginStart="20dp"
        android:id="@+id/txt4"
        android:layout_marginTop="15dp"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/txt4"
        android:layout_marginTop="15dp"
        android:layout_marginStart="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cdv3"
        android:layout_below="@+id/cdv2"
        android:layout_marginEnd="20dp">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"

        />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Year : "
        android:layout_below="@+id/cdv3"
        android:layout_marginStart="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txt5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Year Of Admission"
        android:layout_toRightOf="@+id/txt5"
        android:layout_below="@+id/cdv3"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textColor="#000000"
        android:layout_marginStart="0dp"
        android:inputType="number"
        android:singleLine="true"
        android:id="@+id/edt5"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Reg. Number : "
        android:layout_below="@+id/txt5"
        android:layout_marginStart="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txt6"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="In Capital"
        android:layout_toRightOf="@+id/txt6"
        android:layout_below="@+id/txt5"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textColor="#000000"
        android:layout_marginStart="0dp"
        android:inputType="textCapSentences"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:id="@+id/edt6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Password : "
        android:layout_below="@+id/txt8"
        android:layout_marginStart="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txt7"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="At Least 6 Characters"
        android:layout_toRightOf="@+id/txt7"
        android:layout_below="@+id/txt8"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textColor="#000000"
        android:layout_marginStart="0dp"
        android:inputType="textPassword"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:id="@+id/edt7"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Email : "
        android:layout_below="@+id/txt6"
        android:layout_marginStart="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txt8"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Institute Email ID"
        android:layout_toRightOf="@+id/txt7"
        android:layout_below="@+id/txt6"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:textColor="#000000"
        android:layout_marginStart="0dp"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:id="@+id/edt8"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_below="@+id/edt7"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="REGISTER"
        android:textColor="#ffffff"
        android:id="@+id/btn1"/>
</RelativeLayout>